// IPF Footer - Located at the last 24 bytes of the file
typedef struct {
    ushort  FileCount;              // Number of files in the archive
    uint    FileTableOffset;        // Offset to the file table
    ushort  FileRemovedCount;       // Number of removed files (usually 0)
    uint    RemovedFileTableOffset; // Offset to removed file table (usually 0)
    char    Signature[4];           // "PK\x05\x06"
    uint    OldVersion;             // Base version
    uint    NewVersion;             // Patch version
} IPF_FOOTER <read=ReadIpfFooter, bgcolor=COLOR_FOOTER>;

string ReadIpfFooter(IPF_FOOTER &f) {
    local string s;
    local string encStatus = "Unencrypted";
    if (f.NewVersion > 11000 || f.NewVersion == 0) {
        encStatus = "Encrypted";
    }
    SPrintf(s, "Files: %d, Version: %d -> %d (%s)", 
            f.FileCount, f.OldVersion, f.NewVersion, encStatus);
    return s;
}

// IPF File Entry - Describes a single file in the archive
typedef struct {
    local int64 entryStart = FTell();
    
    ushort  PathLength;             // Length of the relative path
    uint    Checksum;               // CRC32 checksum of compressed data
    uint    SizeCompressed;         // Compressed size in bytes
    uint    SizeUncompressed;       // Uncompressed size in bytes
    uint    DataOffset;             // Offset to the file data
    ushort  PackFileNameLength;     // Length of the pack filename
    
    if (PackFileNameLength > 0 && PackFileNameLength < 4096) {
        char PackFileName[PackFileNameLength] <bgcolor=COLOR_STRING>;
    }
    
    if (PathLength > 0 && PathLength < 4096) {
        char Path[PathLength] <bgcolor=COLOR_STRING>;
    }
} IPF_FILE_ENTRY <read=ReadIpfFileEntry, optimize=false, bgcolor=COLOR_HEADER>;

string ReadIpfFileEntry(IPF_FILE_ENTRY &e) {
    local string fullPath;
    local string packName = "";
    local string path = "";
    
    if (exists(e.PackFileName))
        packName = e.PackFileName;
    if (exists(e.Path))
        path = e.Path;
    
    local string compType = GetCompressionType(path);
    
    SPrintf(fullPath, "%s/%s [%s] (%d -> %d bytes)", 
            packName, path, compType, e.SizeCompressed, e.SizeUncompressed);
    return fullPath;
}

// IPF File Data Block - The actual compressed/encrypted data
typedef struct(uint size, int isEncrypted) {
    local int _isEnc = isEncrypted;
    if (size > 0) {
        if (isEncrypted) {
            ubyte Data[size] <bgcolor=COLOR_ENCRYPTED, comment="PKWARE Encrypted + DEFLATE">;
        } else {
            ubyte Data[size] <bgcolor=COLOR_DATA, comment="Raw/Unencrypted">;
        }
    }
} IPF_FILE_DATA <read=ReadIpfFileData, optimize=false>;

string ReadIpfFileData(IPF_FILE_DATA &d) {
    local string s;
    if (d._isEnc) {
        SPrintf(s, "Encrypted Data (%d bytes)", sizeof(d.Data));
    } else {
        SPrintf(s, "Raw Data (%d bytes)", sizeof(d.Data));
    }
    return s;
}

