// Define ExtractFile function (after fileTable is available)
void ExtractFile(int fileIndex) {
    if (fileIndex < 0 || fileIndex >= footer.FileCount) {
        Printf("Error: Invalid file index %d (valid range: 0-%d)\n", fileIndex, footer.FileCount - 1);
        return;
    }
    
    local string path = "";
    local string packName = "";
    if (exists(fileTable.entry[fileIndex].Path)) {
        path = fileTable.entry[fileIndex].Path;
    }
    if (exists(fileTable.entry[fileIndex].PackFileName)) {
        packName = fileTable.entry[fileIndex].PackFileName;
    }
    
    local uint offset = fileTable.entry[fileIndex].DataOffset;
    local uint compSize = fileTable.entry[fileIndex].SizeCompressed;
    local uint uncompSize = fileTable.entry[fileIndex].SizeUncompressed;
    local int encrypted = g_isEncrypted && !IsRawFile(path);
    
    Printf("\n╔══════════════════════════════════════════════════════════════╗\n");
    Printf("║ Extracting File %d                                           \n", fileIndex);
    Printf("╚══════════════════════════════════════════════════════════════╝\n");
    Printf("Pack:             %s\n", packName);
    Printf("Path:             %s\n", path);
    Printf("Data Offset:      0x%X\n", offset);
    Printf("Compressed Size:  %d bytes\n", compSize);
    Printf("Uncompressed:     %d bytes\n", uncompSize);
    Printf("Checksum:         0x%08X\n", fileTable.entry[fileIndex].Checksum);
    Printf("Encrypted:        %s\n", encrypted ? "Yes (PKWARE)" : "No");
    Printf("Compression:      %s\n", GetCompressionType(path));
    
    if (encrypted) {
        DecryptFileData(offset, compSize);
        Printf("\nNote: After decryption, data is still DEFLATE compressed.\n");
        Printf("Use a DEFLATE decompressor to get the original file content.\n");
    } else {
        Printf("\nFile is not encrypted.\n");
        if (IsRawFile(path)) {
            Printf("File type (.jpg/.fsb/.mp3) is stored without compression.\n");
        } else {
            Printf("Data is DEFLATE compressed (without encryption).\n");
        }
    }
}
