//------------------------------------------------
//--- Main Parsing Logic
//------------------------------------------------

// Validate the file (always try to parse, just warn if signature doesn't match)
local int64 fileSize = FileSize();
if (fileSize < 24) {
    Warning("File too small to be a valid IPF archive (%Ld bytes, minimum 24).", fileSize);
    return -1;
}

// Check signature but don't fail - just inform
local int sigValid = IsValidIpf();
if (!sigValid) {
    Printf("Note: Signature check failed. File may still be a valid IPF with different signature.\n");
    Printf("Continuing with parsing attempt...\n\n");
}
Printf("╔══════════════════════════════════════════════════════════════╗\n");
Printf("║           IPF Archive Parser v1.2 (with Decryption)         ║\n");
Printf("╚══════════════════════════════════════════════════════════════╝\n");
Printf("File Size: %Ld bytes (0x%LX)\n\n", fileSize, fileSize);

// Step 1: Read the footer (last 24 bytes)
Printf("┌─── Footer ───────────────────────────────────────────────────┐\n");
FSeek(fileSize - 24);
IPF_FOOTER footer;

// Validate footer looks reasonable
local int footerValid = 1;
local string footerIssues = "";

if (footer.FileTableOffset >= fileSize) {
    Printf("│ WARNING: FileTableOffset (0x%X) >= FileSize!               │\n", footer.FileTableOffset);
    footerValid = 0;
    footerIssues += "FileTableOffset out of bounds. ";
}
if (footer.FileCount > 100000) {  // Sanity check
    Printf("│ WARNING: FileCount (%d) seems unreasonably large!          │\n", footer.FileCount);
    footerValid = 0;
    footerIssues += "FileCount too large. ";
}

// Validate signature bytes (warn but continue if invalid)
local int validSignature = (footer.Signature[0] == 0x50 && footer.Signature[1] == 0x4B && 
                            footer.Signature[2] == 0x05 && footer.Signature[3] == 0x06);
if (!validSignature) {
    Printf("│ WARNING: Non-standard signature: %02X %02X %02X %02X             │\n",
            footer.Signature[0], footer.Signature[1], footer.Signature[2], footer.Signature[3]);
    Printf("│          (ASCII: '%c%c%c%c')                                  │\n",
            footer.Signature[0] >= 32 ? footer.Signature[0] : '.',
            footer.Signature[1] >= 32 ? footer.Signature[1] : '.',
            footer.Signature[2] >= 32 ? footer.Signature[2] : '.',
            footer.Signature[3] >= 32 ? footer.Signature[3] : '.');
    Printf("│          Expected: 50 4B 05 06 (PK\\x05\\x06)                 │\n");
    footerIssues += "Invalid signature. ";
}

// Check if this looks like file content rather than a footer
// If FileTableOffset points outside file AND signature is ASCII text, this is likely not an IPF
local int looksLikeContent = (footer.Signature[0] >= 0x20 && footer.Signature[0] < 0x7F &&
                               footer.Signature[1] >= 0x20 && footer.Signature[1] < 0x7F &&
                               footer.Signature[2] >= 0x20 && footer.Signature[2] < 0x7F &&
                               footer.Signature[3] >= 0x20 && footer.Signature[3] < 0x7F);

if (!footerValid) {
    Printf("│                                                                  │\n");
    Printf("│ ⚠ FOOTER VALIDATION FAILED                                      │\n");
    Printf("│ Issues: %-52s│\n", footerIssues);
    
    if (looksLikeContent && footer.FileTableOffset >= fileSize) {
        Printf("│                                                              │\n");
        Printf("│ This file appears to have NO VALID FOOTER.                   │\n");
        Printf("│ The last 24 bytes look like file content, not metadata.      │\n");
        Printf("│                                                              │\n");
        Printf("│ Possible causes:                                             │\n");
        Printf("│  - File is a raw/extracted archive without footer            │\n");
        Printf("│  - File uses a different/older IPF format                    │\n");
        Printf("│  - File is corrupted or truncated                            │\n");
        Printf("│                                                              │\n");
        Printf("│ Cannot parse this file with the standard IPF template.       │\n");
        Printf("└──────────────────────────────────────────────────────────────┘\n");
        
        // Show the last 64 bytes for debugging
        Printf("\n--- Last 64 bytes of file (for debugging) ---\n");
        local int64 debugStart = fileSize - 64;
        if (debugStart < 0) debugStart = 0;
        FSeek(debugStart);
        local int i;
        local ubyte b;
        Printf("Hex:   ");
        for (i = 0; i < 64 && debugStart + i < fileSize; i++) {
            b = ReadUByte(debugStart + i);
            Printf("%02X ", b);
            if ((i + 1) % 16 == 0) Printf("\n       ");
        }
        Printf("\nASCII: ");
        FSeek(debugStart);
        for (i = 0; i < 64 && debugStart + i < fileSize; i++) {
            b = ReadUByte(debugStart + i);
            if (b >= 32 && b < 127) Printf("%c", b);
            else Printf(".");
            if ((i + 1) % 16 == 0) Printf("\n       ");
        }
        Printf("\n");
        
        Warning("File does not have a valid IPF footer. Cannot parse.");
        return -1;
    }
    
    Printf("│ Parsing will continue but results may be incorrect.        │\n");
}

// Set global encryption flag
g_isEncrypted = IsEncrypted(footer.NewVersion);

// Heuristic: Check if first file's data looks like it's already deflate (not encrypted)
if (g_isEncrypted && footer.FileCount > 0 && footer.FileTableOffset > 0) {
    // Peek at offset 0 (first file usually starts there)
    if (LooksLikeDeflate(0)) {
        Printf("│ NOTE: Data appears to be unencrypted DEFLATE despite version  │\n");
        Printf("│       Set g_forceEncryption = 0 at line ~270 to disable       │\n");
    }
}

Printf("│ File Count:        %-10d                               │\n", footer.FileCount);
Printf("│ File Table Offset: 0x%-8X                              │\n", footer.FileTableOffset);
Printf("│ Removed Files:     %-10d                               │\n", footer.FileRemovedCount);
Printf("│ Old Version:       %-10d                               │\n", footer.OldVersion);
Printf("│ New Version:       %-10d                               │\n", footer.NewVersion);
Printf("│ Signature:         %02X %02X %02X %02X                              │\n", 
       footer.Signature[0], footer.Signature[1], footer.Signature[2], footer.Signature[3]);
if (g_isEncrypted) {
    Printf("│ Encryption:        PKWARE Traditional                       │\n");
    Printf("│ Password:          ofO1a0ueXA? [\\xFFs h %%?                  │\n");
} else {
    Printf("│ Encryption:        None                                     │\n");
}
Printf("└──────────────────────────────────────────────────────────────┘\n\n");

// Step 2: Read the file table
Printf("┌─── File Table ───────────────────────────────────────────────┐\n");
FSeek(footer.FileTableOffset);

// Create a struct to hold all file entries
typedef struct {
    local int i;
    for (i = 0; i < footer.FileCount; i++) {
        IPF_FILE_ENTRY entry;
    }
} IPF_FILE_TABLE <read=ReadIpfFileTable>;

