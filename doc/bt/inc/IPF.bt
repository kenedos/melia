//------------------------------------------------
//--- PKWARE Traditional Encryption
//------------------------------------------------

// Global encryption key state
local uint g_Key0, g_Key1, g_Key2;

// Global encryption flag (set after reading footer)
local int g_isEncrypted = 0;

// Encryption password used by IPF files: "ofO1a0ueXA? [\xFFs h %?"
local uchar IPF_PASSWORD[20] = { 
    0x6F, 0x66, 0x4F, 0x31, 0x61, 0x30, 0x75, 0x65, 
    0x58, 0x41, 0x3F, 0x20, 0x5B, 0xFF, 0x73, 0x20, 
    0x68, 0x20, 0x25, 0x3F
};

// CRC32 single byte computation (used for key updates)
uint ComputeCrc32(uint w, ubyte b) {
    return crc32Table[(w ^ b) & 0xFF] ^ (w >> 8);
}

// Update the encryption keys with a byte value
void UpdateKeys(ubyte byteValue) {
    g_Key0 = ComputeCrc32(g_Key0, byteValue);
    g_Key1 = g_Key1 + (ubyte)g_Key0;
    g_Key1 = g_Key1 * 0x08088405 + 1;
    g_Key2 = ComputeCrc32(g_Key2, (ubyte)(g_Key1 >> 24));
}

// Get the magic byte for decryption
ubyte GetMagicByte() {
    local ushort t = (ushort)((g_Key2 & 0xFFFF) | 2);
    return (ubyte)(((t * (t ^ 1)) >> 8) & 0xFF);
}

// Initialize encryption keys with the IPF password
void InitializeKeys() {
    // Initial key values
    g_Key0 = 0x12345678;
    g_Key1 = 0x23456789;
    g_Key2 = 0x34567890;
    
    // Process password bytes (20 characters)
    local int i;
    for (i = 0; i < 20; i++) {
        UpdateKeys(IPF_PASSWORD[i]);
    }
}

// Decrypt a single byte at the given index
// Only even-indexed bytes are decrypted; odd bytes pass through
ubyte DecryptByte(ubyte cipherByte, int index) {
    if ((index % 2) != 0) {
        // Odd index - pass through unchanged
        return cipherByte;
    } else {
        // Even index - decrypt
        local ubyte plainByte = cipherByte ^ GetMagicByte();
        UpdateKeys(plainByte);
        return plainByte;
    }
}

//------------------------------------------------
