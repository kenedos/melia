// Check if the file has a valid IPF signature
int IsValidIpf() {
    local int64 pos = FTell();
    local int64 fileSize = FileSize();
    
    if (fileSize < 24) {
        Printf("File too small: %Ld bytes (minimum 24 required)\n", fileSize);
        return 0;
    }
    
    // Footer structure (24 bytes from EOF):
    //   FileCount (2) + FileTableOffset (4) + FileRemovedCount (2) + 
    //   RemovedFileTableOffset (4) + Signature (4) + OldVersion (4) + NewVersion (4)
    // Signature is at offset 12 from footer start = EOF - 12
    FSeek(fileSize - 12);
    local uchar sig[4];
    sig[0] = ReadUByte(FTell());
    sig[1] = ReadUByte(FTell() + 1);
    sig[2] = ReadUByte(FTell() + 2);
    sig[3] = ReadUByte(FTell() + 3);
    
    Printf("Signature check at 0x%LX: %02X %02X %02X %02X (expected: 50 4B 05 06)\n", 
           fileSize - 12, sig[0], sig[1], sig[2], sig[3]);
    
    FSeek(pos);
    
    // Signature should be "PK\x05\x06"
    if (sig[0] == 0x50 && sig[1] == 0x4B && 
        sig[2] == 0x05 && sig[3] == 0x06) {
        return 1;
    }
    return 0;
}

// Check if file data is encrypted based on version
// Set this to 0 to force no encryption, 1 to force encryption, -1 for auto-detect
local int g_forceEncryption = -1;  // Change this manually if needed

int IsEncrypted(uint newVersion) {
    if (g_forceEncryption == 0) return 0;  // Force no encryption
    if (g_forceEncryption == 1) return 1;  // Force encryption
    // Auto-detect based on version
    return (newVersion > 11000 || newVersion == 0);
}

// Try to detect if data looks like valid DEFLATE (starts with common zlib/deflate headers)
int LooksLikeDeflate(int64 offset) {
    local ubyte b0 = ReadUByte(offset);
    local ubyte b1 = ReadUByte(offset + 1);
    
    // Common DEFLATE stream starts (no zlib header, raw deflate)
    // Deflate blocks typically start with bits indicating block type
    // This is a heuristic - encrypted data rarely starts with these patterns
    
    // Check for zlib header (78 01, 78 5E, 78 9C, 78 DA)
    if (b0 == 0x78 && (b1 == 0x01 || b1 == 0x5E || b1 == 0x9C || b1 == 0xDA)) {
        return 1;
    }
    
    return 0;  // Can't determine
}

// Get compression type description based on file extension
string GetCompressionType(string path) {
    local int len = Strlen(path);
    if (len < 4) return "DEFLATE";
    
    local string ext = SubStr(path, len - 4, 4);
    
    // These extensions are stored uncompressed and unencrypted
    if (ext == ".jpg" || ext == "jpeg" || ext == ".fsb" || ext == ".mp3") {
        return "Raw";
    }
    return "DEFLATE";
}

// Check if file extension means no compression/encryption
int IsRawFile(string path) {
    local int len = Strlen(path);
    if (len < 4) return 0;
    
    local string ext = SubStr(path, len - 4, 4);
    
    if (ext == ".jpg" || ext == "jpeg" || ext == ".fsb" || ext == ".mp3") {
        return 1;
    }
    return 0;
}

