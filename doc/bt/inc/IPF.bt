//------------------------------------------------

// Decrypt and display file data
void DecryptFileData(int64 offset, uint size) {
    local int64 pos = FTell();
    local int i;
    local ubyte c, p;
    
    Printf("\n=== Decrypting %d bytes at offset 0x%LX ===\n", size, offset);
    
    InitializeKeys();
    FSeek(offset);
    
    // Determine how many bytes to show
    local int showBytes = 256;
    if (size < showBytes) showBytes = size;
    
    Printf("\nFirst %d decrypted bytes (hex):\n", showBytes);
    for (i = 0; i < showBytes; i++) {
        c = ReadUByte(offset + i);
        p = DecryptByte(c, i);
        Printf("%02X ", p);
        if ((i + 1) % 16 == 0) Printf("\n");
    }
    if (showBytes % 16 != 0) Printf("\n");
    
    // Try to show as text if printable
    Printf("\nFirst %d decrypted bytes (ASCII):\n", showBytes);
    InitializeKeys();  // Reset keys for second pass
    for (i = 0; i < showBytes; i++) {
        c = ReadUByte(offset + i);
        p = DecryptByte(c, i);
        if (p >= 32 && p < 127) {
            Printf("%c", p);
        } else {
            Printf(".");
        }
        if ((i + 1) % 64 == 0) Printf("\n");
    }
    Printf("\n");
    
    FSeek(pos);
}

